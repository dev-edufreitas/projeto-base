# ==============================================
# CONFIGURAÇÕES DO FRONTEND VUE.JS
# ==============================================

# URL da API GraphQL (aponta para o backend)
VITE_API_URL=http://localhost:8000/graphql

# Nome da aplicação
VITE_APP_NAME=projeto_base

# Ambiente de desenvolvimento
VITE_APP_ENV=development

# Debug mode
VITE_APP_DEBUG=true

# Porta do servidor de desenvolvimento
VITE_PORT=3000

# Host do servidor de desenvolvimento
VITE_HOST=0.0.0.0

# ==============================================
# CONFIGURAÇÕES ESPECÍFICAS DO VUE/VITE
# ==============================================

# Hot Module Replacement
VITE_HMR=true

# Source maps em desenvolvimento
VITE_SOURCEMAP=true

# ==============================================
# URLS E ENDPOINTS
# ==============================================

# URL base da aplicação
VITE_BASE_URL=http://localhost:3000

# URL do backend para requests
VITE_BACKEND_URL=http://localhost:8000

# WebSocket URL (se usar subscriptions GraphQL)
VITE_WS_URL=ws://localhost:8000/graphql

# ==============================================
# CONFIGURAÇÕES DE CACHE
# ==============================================

# Cache do Apollo Client (se usar)
VITE_APOLLO_CACHE=true

# Tempo de cache em minutos
VITE_CACHE_DURATION=60
